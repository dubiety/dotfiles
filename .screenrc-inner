vbell off
autodetach on
startup_message off
shell -$SHELL

allpartial off
defc1 off
defencoding utf8
bind b encoding big5 utf8
bind u encoding utf8 utf8

#caption always "%{=u .G} %-w%<%{=ub .C}%n %t%{=u .G}%+w "
bindkey "^[^[OD" prev
bindkey "^[^[OC" next
bindkey "^[b" prev
bindkey "^[f" next
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

#caption always "%{= bk} %{= bY} [%n]%t @ %H %{-} %= %{= bR} %l %{-} | %{= KG} %Y-%m-%d %{-} "
hardstatus alwayslastline "%?%{WK}%-Lw%?%{WR}%n*%f %t%?(%u)%?%?%{WK}%+Lw%? %{WK}"

defscrollback 100000
